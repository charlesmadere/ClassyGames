	android:layout_width="match_parent"
	android:orientation="horizontal"
	style="@style/ClassyGames">
	<fragment
		android:id="@+id/central_fragment_activity_fragment_list"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:layout_width="0dip"
		android:name="edu.selu.android.classygames.GamesListFragment" />
	<fragment
		android:id="@+id/central_fragment_activity_fragment_game"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:layout_width="0dip"
		android:name="edu.selu.android.classygames.GenericGameFragment" />
</LinearLayout>