<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg_subtle_gray"
	android:baselineAligned="false"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="horizontal"
	android:paddingBottom="2dip"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"
	android:paddingTop="8dip">
	<LinearLayout
		android:gravity="center"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:layout_marginRight="16dip"
		android:layout_weight="1"
		android:layout_width="0dip"
		android:orientation="vertical">
		<TextView
			android:gravity="center"
			android:id="@+id/chess_glossary_dialog_fragment_bishop"
			android:layout_gravity="center"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="8dip"
			android:layout_width="match_parent"
			android:text="@string/bishop"
			android:textColor="@color/gray_darker"
			android:textSize="18sp" />
		<TextView
			android:gravity="center"
			android:id="@+id/chess_glossary_dialog_fragment_knight"
			android:layout_gravity="center"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="8dip"
			android:layout_width="match_parent"
			android:text="@string/knight"
			android:textColor="@color/gray_darker"
			android:textSize="18sp" />
		<TextView
			android:gravity="center"
			android:id="@+id/chess_glossary_dialog_fragment_queen"
			android:layout_gravity="center"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="8dip"
			android:layout_width="match_parent"
			android:text="@string/queen"
			android:textColor="@color/gray_darker"
			android:textSize="18sp" />
	</LinearLayout>
	<LinearLayout
		android:gravity="center"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dip"
		android:layout_weight="1"
		android:layout_width="0dip"
		android:orientation="vertical">
		<TextView
			android:gravity="center"
			android:id="@+id/chess_glossary_dialog_fragment_king"
			android:layout_gravity="center"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="8dip"
			android:layout_width="match_parent"
			android:text="@string/king"
			android:textColor="@color/gray_darker"
			android:textSize="18sp" />
		<TextView
			android:gravity="center"
			android:id="@+id/chess_glossary_dialog_fragment_pawn"
			android:layout_gravity="center"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="8dip"
			android:layout_width="match_parent"
			android:text="@string/pawn"
			android:textColor="@color/gray_darker"
			android:textSize="18sp" />
		<TextView
			android:gravity="center"
			android:id="@+id/chess_glossary_dialog_fragment_rook"
			android:layout_gravity="center"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
			android:layout_marginTop="8dip"
			android:layout_width="match_parent"
			android:text="@string/rook"
			android:textColor="@color/gray_darker"
			android:textSize="18sp" />
	</LinearLayout>
</LinearLayout>