<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	style="@style/ClassyGames">
	<LinearLayout
		android:layout_height="160dip"
		android:layout_width="fill_parent"
		android:orientation="horizontal"
		android:paddingBottom="8dip"
		android:paddingTop="8dip">
		<ImageView
			android:contentDescription="@string/confirm_game_activity_person_picture_description"
			android:gravity="center_vertical"
			android:id="@+id/confirm_game_activity_person_picture"
			android:layout_height="fill_parent"
			android:layout_width="128dip"
			android:paddingRight="8dip" />
		<TextView
			android:gravity="center_vertical"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:text="@string/confirm_game_activity_description"
			style="@style/paragraph" />
	</LinearLayout>
	<TextView
		android:id="@+id/confirm_game_activity_person_name"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textSize="18dip" />
</LinearLayout>