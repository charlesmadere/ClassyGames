<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:paddingBottom="8dip"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"
	android:paddingTop="8dip"
	style="@style/ClassyGames">
	<ImageView
		android:baseline="32dip"
		android:contentDescription="@string/confirm_game_activity_person_picture_description"
		android:id="@+id/confirm_game_activity_person_picture"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_height="112dip"
		android:layout_marginBottom="4dip"
		android:layout_marginRight="8dip"
		android:layout_width="128dip" />
	<TextView
		android:layout_alignBaseline="@id/confirm_game_activity_person_picture"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/confirm_game_activity_person_picture"
		android:layout_width="wrap_content"
		android:text="@string/confirm_game_activity_description"
		android:textColor="@color/gray_dark"
		style="@style/paragraph" />
	<TextView
		android:id="@+id/confirm_game_activity_person_name"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/confirm_game_activity_person_picture"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:maxLines="1"
		android:textColor="@color/gray_darker"
		android:textSize="20sp" />
	<Button
		android:id="@+id/confirm_game_activity_button_accept"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_height="wrap_content"
		android:layout_marginRight="4dip"
		android:layout_width="wrap_content"
		android:text="@string/confirm_game_activity_button_accept"
		style="@style/button.blue" />
	<Button
		android:id="@+id/confirm_game_activity_button_deny"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_height="wrap_content"
		android:layout_marginLeft="4dip"
		android:layout_width="wrap_content"
		android:text="@string/confirm_game_activity_button_deny"
		style="@style/button.gray" />
</RelativeLayout>