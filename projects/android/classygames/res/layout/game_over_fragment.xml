<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:paddingBottom="8dip"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"
	android:paddingTop="8dip"
	style="@style/ClassyGames">
	<ImageView
		android:adjustViewBounds="true"
		android:contentDescription="@string/game_over_fragment_person_picture_description"
		android:id="@+id/game_over_fragment_person_picture"
		android:layout_height="224dip"
		android:layout_marginBottom="8dip"
		android:layout_width="fill_parent" />
	<TextView
		android:gravity="center_horizontal"
		android:id="@+id/game_over_activity_person_name"
		android:layout_below="@id/game_over_fragment_person_picture"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textColor="@color/gray_darker"
		android:textSize="26sp" />
	<Button
		android:id="@+id/game_over_fragment_button_return"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginTop="8dip"
		android:text="@string/game_over_fragment_button_return"
		style="@style/button.gray" />
	<TextView
		android:id="@+id/game_over_activity_text"
		android:layout_above="@id/game_over_fragment_button_return"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		android:textColor="@color/gray_dark"
		style="@style/paragraph" />
</RelativeLayout>