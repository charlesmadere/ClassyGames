<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="center_vertical"
	android:layout_height="128dip"
	android:layout_width="fill_parent"
	android:paddingBottom="12dip"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"
	android:paddingTop="12dip">
	<ImageView
		android:adjustViewBounds="true"
		android:contentDescription="@string/games_list_activity_listview_item_picture_description"
		android:gravity="center_vertical"
		android:id="@+id/games_list_activity_listview_item_picture"
		android:layout_alignParentTop="true"
		android:layout_height="fill_parent"
		android:layout_marginRight="6dip"
		android:layout_width="48dip"
		android:src="@drawable/ab_refresh" />
	<TextView
		android:gravity="center_vertical"
		android:id="@+id/games_list_activity_listview_item_name"
		android:layout_alignParentTop="true"
		android:layout_alignWithParentIfMissing="true"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/games_list_activity_listview_item_picture"
		android:layout_width="fill_parent"
		android:singleLine="true"
		android:textColor="@color/gray_dark"
		android:textSize="19sp"
		android:textStyle="bold" />
	<TextView
		android:gravity="center_vertical"
		android:id="@+id/games_list_activity_listview_item_time"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/games_list_activity_listview_item_name"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/games_list_activity_listview_item_picture"
		android:layout_width="fill_parent"
		android:singleLine="true"
		android:textColor="@color/gray_medium"
		android:textSize="17sp" />
</RelativeLayout>