<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/selectable_item"
	android:gravity="center_vertical"
	android:layout_height="128dip"
	android:layout_width="match_parent"
	android:paddingBottom="12dip"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"
	android:paddingTop="12dip">
	<ImageView
		android:adjustViewBounds="true"
		android:contentDescription="@string/games_list_fragment_listview_item_picture_description"
		android:gravity="center"
		android:id="@+id/games_list_fragment_listview_item_picture"
		android:layout_alignParentTop="true"
		android:layout_centerVertical="true"
		android:layout_height="46dip"
		android:layout_marginRight="12dip"
		android:layout_width="46dip"
		android:scaleType="fitCenter"
		android:src="@drawable/empty_profile_picture_small" />
	<TextView
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:id="@+id/games_list_fragment_listview_item_name"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/games_list_fragment_listview_item_picture"
		android:layout_width="wrap_content"
		android:maxLines="1"
		android:textColor="@color/gray_darker"
		android:textIsSelectable="false"
		android:textSize="19sp" />
	<TextView
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:id="@+id/games_list_fragment_listview_item_time"
		android:layout_below="@id/games_list_fragment_listview_item_name"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/games_list_fragment_listview_item_picture"
		android:layout_width="wrap_content"
		android:maxLines="1"
		android:textColor="@color/gray_dark"
		android:textIsSelectable="false"
		android:textSize="16sp" />
	<ImageView
		android:adjustViewBounds="true"
		android:contentDescription="@string/games_list_fragment_listview_item_game_icon_description"
		android:id="@+id/games_list_fragment_listview_item_game_icon"
		android:layout_alignBottom="@id/games_list_fragment_listview_item_time"
		android:layout_alignParentRight="true"
		android:layout_height="wrap_content"
		android:layout_width="16dip" />
</RelativeLayout>