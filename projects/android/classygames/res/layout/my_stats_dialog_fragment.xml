<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg_subtle_gray"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:minWidth="256dip"
	android:orientation="vertical"
	android:paddingBottom="16dip"
	android:paddingLeft="24dip"
	android:paddingRight="24dip"
	android:paddingTop="16dip">
	<LinearLayout
		android:baselineAligned="false"
		android:id="@+id/my_stats_dialog_fragment_linearlayout_stats"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dip"
		android:layout_width="match_parent"
		android:padding="4dip"
		android:orientation="horizontal"
		android:visibility="gone">
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginRight="16dip"
			android:layout_weight="1"
			android:layout_width="0dip"
			android:orientation="vertical">
			<ImageView
				android:adjustViewBounds="true"
				android:contentDescription="@string/checkers"
				android:src="@drawable/game_icon_checkers"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dip"
				android:layout_width="match_parent" />
			<TextView
				android:gravity="center"
				android:id="@+id/my_stats_dialog_fragment_textview_checkers_wins"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/loading"
				android:textColor="@color/gray_darker"
				android:textSize="16sp" />
			<TextView
				android:gravity="center"
				android:id="@+id/my_stats_dialog_fragment_textview_checkers_losses"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/loading"
				android:textColor="@color/gray_darker"
				android:textSize="16sp" />
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dip"
			android:layout_weight="1"
			android:layout_width="0dip"
			android:orientation="vertical">
			<ImageView
				android:adjustViewBounds="true"
				android:contentDescription="@string/chess"
				android:src="@drawable/game_icon_chess"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dip"
				android:layout_width="match_parent" />
			<TextView
				android:gravity="center"
				android:id="@+id/my_stats_dialog_fragment_textview_chess_wins"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textColor="@color/gray_darker"
				android:textSize="16sp" />
			<TextView
				android:gravity="center"
				android:id="@+id/my_stats_dialog_fragment_textview_chess_losses"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textColor="@color/gray_darker"
				android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:gravity="center"
		android:id="@+id/my_stats_dialog_fragment_textview_games_played"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:textColor="@color/gray_dark"
		android:textSize="18sp"
		android:visibility="gone" />
	<TextView
		android:gravity="center"
		android:id="@+id/my_stats_dialog_fragment_textview_loading"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/loading_your_scores"
		android:textColor="@color/pink_dark"
		android:textSize="18sp"
		android:typeface="monospace" />
</LinearLayout>