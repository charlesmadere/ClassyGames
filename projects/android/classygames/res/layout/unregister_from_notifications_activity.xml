<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	style="@style/ClassyGames.ExtraPadding">
	<TextView
		android:gravity="center_vertical"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:layout_width="match_parent"
		android:text="@string/unregister_from_notifications_activity_description"
		style="@style/Paragraph.ExtraPadding" />
	<LinearLayout
		android:gravity="center"
		android:layout_height="match_parent"
		android:layout_weight="5"
		android:layout_width="match_parent"
		android:orientation="vertical">
		<Button
			android:id="@+id/unregister_from_notifications_activity_button_unregister"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/unregister_from_notifications"
			style="@style/Button.Gray" />
	</LinearLayout>
</LinearLayout>